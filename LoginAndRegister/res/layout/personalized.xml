<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEDDCB" >

    <Button
        android:id="@+id/btn_changeData"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/change_data" />

    <Button
        android:id="@+id/btn_changeBackground"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn_changeData"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/change_background"/>

    <Button
        android:id="@+id/btn_changeToNight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/btn_changeData"
        android:background="@drawable/nig" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn_changeToNight"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/btn_changeBackground"
        android:background="@drawable/tologout" />

</RelativeLayout>